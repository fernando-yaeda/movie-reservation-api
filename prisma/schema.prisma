generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  role     UserRole @default(USER)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]

  @@map("users")
}

model Movie {
  id               String   @id @default(uuid())
  imdbId           String   @unique
  title            String
  description      String
  posterUrl        String
  genres           String[]
  runtimeInMinutes Int

  showtimes Showtime[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("movies")
}

model Room {
  id       String @id @default(uuid())
  name     String @unique
  capacity Int

  seats     Seat[]
  showtimes Showtime[]

  createdAt DateTime @default(now())

  @@map("rooms")
}

model Seat {
  id     String @id @default(uuid())
  row    String // "A", "B"
  number String // "1", "2"

  roomId     String
  room       Room            @relation(fields: [roomId], references: [id])
  seatStatus ShowtimeSeats[]

  createdAt DateTime @default(now())

  @@unique([roomId, row, number])
  @@map("seats")
}

model Showtime {
  id           String   @id @default(uuid())
  startTime    DateTime
  priceInCents Int

  movieId String
  movie   Movie  @relation(fields: [movieId], references: [id])

  roomId String
  room   Room   @relation(fields: [roomId], references: [id])

  seatStatus ShowtimeSeats[]

  createdAt DateTime  @default(now())
  bookings  Booking[]

  @@map("showtimes")
}

model ShowtimeSeats {
  id     String     @id @default(uuid())
  status SeatStatus @default(AVAILABLE)

  showtimeId String
  showtime   Showtime @relation(fields: [showtimeId], references: [id])
  seatId     String
  seat       Seat     @relation(fields: [seatId], references: [id])
  bookingId  String? //filled after booking
  booking    Booking? @relation(fields: [bookingId], references: [id])

  @@unique([showtimeId, seatId])
  @@map("showtime_seats")
}

model Booking {
  id String @id @default(uuid())

  seats             String[]
  totalPriceInCents Int

  status BookingStatus @default(CONFIRMED)

  userId     String
  user       User     @relation(fields: [userId], references: [id])
  showtimeId String
  showtime   Showtime @relation(fields: [showtimeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  showtimeSeats ShowtimeSeats[]

  @@map("bookings")
}

enum UserRole {
  ADMIN
  USER
}

enum SeatStatus {
  AVAILABLE
  RESERVED
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
}
